      "ConstraintDescription": "Valid CIDR"
    },

    "HttpAccessCidr1": {
      "Type": "String",
      "Default": "",
      "Description": "Whitelisted HTTP(S) Access CIDR 1",
      "AllowedPattern": "^((([01]?[0-9]?[0-9]|2([0-4][0-9]|5[0-5]))\\.){3}([01]?[0-9]?[0-9]|2([0-4][0-9]|5[0-5]))/([0-2]?[0-9]|3[0-2]))?$",
