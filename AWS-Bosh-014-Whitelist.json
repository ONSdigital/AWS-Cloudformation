  },

  "Conditions": {
    "DeployElb": { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] },
    "PermitFullAccessCidr1": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "FullAccessCidr1" }, "" ] }
      ]
    },
    "PermitFullAccessCidr2": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "FullAccessCidr2" }, "" ] }
      ]
    },
    "PermitFullAccessCidr3": {
