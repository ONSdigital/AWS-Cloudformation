    "PermitHttpAccessCidr6": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "HttpAccessCidr4" }, "" ] }
      ]
    }
  },

  "Resources": {
    "FullAccessWhitelistCidr1": {
      "Type": "AWS::CloudFormation::Stack",
      "Condition": "PermitFullAccessCidr1",
      "Properties": {
        "Parameters": {
          "CfSshSecurityGroup": {
            "Fn::If": [
              "DeployElb", 
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CfSshElbSecurityGroup" } },
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CfSshInstanceSecurityGroup" } }
            ]
          },
          "DirectorSecurityGroup": {
            "Fn::If": [
              "DeployElb", 
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElbSecurityGroup" } },
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorInstanceSecurityGroup" } }
            ]
          },
          "ApplicationLbSecurityGroup": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationLbSecurityGroup" } },
          "WhitelistedCidr": { "Ref": "FullAccessCidr1" }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/", [
	      { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-preamble-TemplatesBucketHttpUrl" } },
              "Templates",
              "External-Access-Whitelist.json"
            ]
          ]
        }
