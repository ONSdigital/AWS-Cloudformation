{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "RDS Snapshot User\naws rds-create-db-snapshot--db-instance-identifier $DATABASE_NAME --db-snapshot-identifier $DATABASE_NAME-snapshot-identifier\naws rds delete-db-snapshot --db-snapshot-identifier $SNAPSHOT_NAME\naws rds describe-db-snapshots --db-instance-identifier $DATABASE_NAME\n",

  "Parameters": {
    "RdsIdentifier": {
      "Type": "String",
      "Description": "RDS Instance Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^[A-Za-z0-9-]+(\\*)?$",
      "ConstraintDescription": "Valid RDS instance identifier or identifier prefix + *\naws rds create-db-snapshot $FOO\n aws rds delete-db-snapshot\naws rds describe-db-snapshots"
    }
  },

  "Outputs": {
    "RdsSnapshotAccessKeyId": {
      "Description": "RDS Snapshot User Access Key Id",
      "Value": { "Ref": "RdsSnapshotAccessKey" }
    },
    "RdsSnapshotSecretAccessKey": {
      "Description": "RDS Snapshot User Broker Access Key",
      "Value": { "Fn::GetAtt": [ "RdsSnapshotAccessKey", "SecretAccessKey" ] }
    }
  },

  "Resources": {
    "RdsSnapshotUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Policies": [
          {
            "PolicyName": "RdsSnapshotPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "rds:DeleteDBSnapshot"
                  ],
                  "Effect": "Allow",
                  "Resource": {
                    "Fn::Join": [
                      "", [
                        "arn:aws:rds:*:*:snapshot:",
                        { "Ref": "RdsIdentifier" },
                        "*"
                      ]
                    ]
                  }
                },
                {
                  "Action": [
                    "rds:CreateDBSnapshot"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    {
                      "Fn::Join": [
                        ":", [
                          "arn:aws:rds:*:*:db",
                          { "Ref": "RdsIdentifier" }
                        ]
                      ]
                    },
                    { 
                      "Fn::Join": [
                        "", [
                          "arn:aws:rds:*:*:snapshot:",
                          { "Ref": "RdsIdentifier" },
                          "*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Action": [
                    "rds:DescribeDBSnapshots"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    {
                      "Fn::Join": [
                        ":", [
                          "arn:aws:rds:*:*:db",
                          { "Ref": "RdsIdentifier" }
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },

    "RdsSnapshotAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": { "Ref": "RdsSnapshotUser" }
      }
    }
  }
}
